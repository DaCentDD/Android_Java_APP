<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/but_logout"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="16dp"
        android:background="#008577"
        android:onClick="Click_back"
        android:text="BACK"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_clean"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:background="#008577"
        android:onClick="Click_clean"
        android:text="CLEAN"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_logout" />

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="806dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/current_email"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:textColor="#008577"
            android:textSize="22sp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="389dp"
            android:layout_height="681dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:text="id"
                    android:textColor="#008577"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/mah"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="mAh"
                    android:textColor="#008577"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/del"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:scrollbars="vertical"
                    android:text="Deleted"
                    android:textColor="#008577"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>